{
  "manifest_version": 2,
  "name": "toHttps",
  "short_name": "toHttps",
  "description": "Use https if possible.",
  "version": "0.0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/19.png",
      "38": "assets/38.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  }
}